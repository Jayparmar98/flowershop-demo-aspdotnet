@model IEnumerable<FlowerShop.Models.Flower>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FlowerName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlowerName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FlowerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FlowerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FlowerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
